<div class="row">
    <% @products.each do |product| %>
    <div class="col-6 col-md-4 ml-2 mt-2">
      <%= link_to product_path(product) do %>
      <div class="card">
        <%= image_tag product.photo_url , class: "card-img-top" %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= product.name %></h5>
          <p><%= humanized_money_with_symbol(product.price) %></p>
          <p class="card-text"><%= product.category.name %></p>
          <%= link_to "More details", product_path(product), class: "btn btn-primary" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
